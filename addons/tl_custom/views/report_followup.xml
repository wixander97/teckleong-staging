<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_followup_reports" inherit_id="account_followup.template_followup_report">
        <xpath expr="//div[hasclass('o_account_reports_header')]/div" position="replace">
        </xpath>
         <xpath expr="//i[hasclass('o_account_reports_edit_summary_pencil')]" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('js_account_report_footnotes')]" position="after">
            <span>
                <p></p>
                <p></p>
                <p>Should you have already initiated the payment, please accept our gratitude, and kindly disregard this reminder.</p>
                <p>If you have any questions or concerns regarding this matter, or if there has been a discrepancy, please do not hesitate to contact Doris at Tel: +65 6398 0020
                    or Email: doris@teckleongmetals.com.</p>
                <p>
                    We appreciate your prompt attention to this matter and value your continued partnership with Teck Leong Metals Pte Ltd.</p>
                <p>Thank you.</p>
                <p>Best Regards,</p>
                <p>Accounts Department</p>
                <p>TECK LEONG METALS PTE LTD</p>
            </span>
        </xpath>
    </template>
    <record id="paperformat_tl_custom_follow_up" model="report.paperformat">
        <field name="name">Teckleong Follow Up </field>
        <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">72</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
    </record>
    <record id="account_followup.action_report_followup" model="ir.actions.report">
        <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_follow_up" />
    </record>
    <template id="followup_filter_info_template" inherit_id="account_followup.followup_filter_info_template">
        <xpath expr="//div[hasclass('print_only')]" position="attributes">
            <attribute name="style">margin-bottom:0px;</attribute>
        </xpath>
        <xpath expr="//p" position="replace">
            <p style="margin-top: 0px; margin-bottom: 0px !important;">
                Date: <span t-esc="today" t-options="{'widget': 'date'}" /><br />
            </p>
        </xpath>
        <xpath expr="//div[hasclass('fallback_header')]/div" position="replace">
            <!-- <div class="w-50" style="padding-right: 25px;"> -->
            <div class="col-5 w-50" style='margin-top: 15px; padding-right: 25px;'>
                <p>
                    <div class="font-weight-bold">Address :</div>
                    <div>
                        <t t-if="partner_addr.company_type == 'person'">
                            <t t-if="partner_addr.parent_id.name">
                                <t t-esc="partner_addr.parent_id.name" />
                            </t>
                            <t t-else="">
                                <div class="hide-text">-</div>
                            </t>
                        </t>
                        <t t-else="">
                            <div>
                                <t t-esc="partner_addr.name" />
                            </div>
                        </t>
                    </div>
                    <div t-if="partner_addr.street">
                        <t t-if="partner_addr.street">
                            <t t-esc="partner_addr.street" />
                        </t>
                    </div>
                    <div class="no-wrap" t-if="partner_addr.street2">
                        <t t-if="partner_addr.street2">
                            <t t-esc="partner_addr.street2" />
                        </t>
                    </div>
                    <div>
                        <t t-if="partner_addr.country_id.name or partner_addr.zip">
                            <t t-esc="partner_addr.country_id.name" />
                            <t t-esc="partner_addr.zip" />
                        </t>
                        <t t-else="">
                            <div class="hide-text">-</div>
                        </t>
                    </div>
                    <div>
                        <span>
                            <t t-if="partner_addr.company_type == 'person'">Attn:
                                <t t-esc="partner_addr.name" />
                            </t>
                            <t t-else="">
                                <div class="hide-text">-</div>
                            </t>
                        </span>
                    </div>
                    <div class=" d-flex t-0">
                        <div class="w-50">Tel:
                            <t t-esc="partner_addr.phone" />
                        </div>
                        <div class="w-50">Fax:
                            <t t-esc="partner_addr.fax" />
                        </div>
                    </div>
                    <span>Email:
                        <t t-esc="partner_addr.email" /></span>
                </p>
            </div>
        </xpath>
    </template>
    <template id="account_followup.report_followup_print_all">
        <t t-call="web.html_container">
            <t t-call-assets="web.assets_common" t-js="false" />
            <t t-set="company" t-value="docs.env.company" />
            <t t-foreach="docs" t-as="partner">
                <t t-call="web.basic_layout">
                    <div class="header ">
                        <link rel="stylesheet" href="/tl_custom/static/css/job_order_report.css" />
                        <link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
                        <div class="job-order-header">
                            <div class="job-order-header-left">
                                <div class="job-order-header-left-logo">
                                    <div style="margin-right: 10px;">
                                        <img src="/tl_custom/static/img/tl_icon.png" width="100px" />
                                    </div>
                                    <div class="job-order-header-left-logo-text">
                                        <div style="color: red; letter-spacing: 22px; font-weight: bold; font-size: 1.65em; font-family: Arial Black;">德隆金属私人有限公司</div>
                                        <div class="d-flex" style="margin-top:5px; font-family: Arial;">
                                            <div style="color: black; font-weight: bold; font-size: 1.9em;">TECK</div>
                                            <div style="color: black; font-weight: bold; font-size: 1.9em; margin-left:7px;">LEONG</div>
                                            <div style="color: black; font-weight: bold; font-size: 1.9em; margin-left:7px;">METALS</div>
                                            <div style="color: black; font-weight: bold; font-size: 1.9em; margin-left:7px;">PTE</div>
                                            <div style="color: black; font-weight: bold; font-size: 1.9em; margin-left:8px;">LTD</div>
                                        </div>
                                        <div style="font-size: 1.2em;margin-top:18px;">
                                            <span style="margin-right: 118px;">Tel : +65 6398 0020</span><span>Fax : +65 6398 0050</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="job-order-header-right ">
                            <div class="job-order-header-right-child" style="font-size: 0.8em; margin-bottom: 20px;">
                                <span>Page : </span>
                                <span class="page" /> of <span class="topage" />
                            </div>
                            <!-- <div style="font-size: 0.8em; margin-bottom: 20px;">
                                <span>Page : </span>
                                <span class="page" /> of <span class="topage" />
                            </div> -->
                        </div>
                        </div>
                    </div>
                    <t t-set="fallback_address" t-value="partner.browse(partner.address_get(['invoice'])['invoice']) or partner" />
                    <t t-call-assets="account_followup.assets_followup_report" />
                    <div class="page">
                        <div class="page-break-inside: avoid">
                            <span t-out="partner.get_followup_html()"></span>
                        </div>
                    </div>
                    <div class="footer w-100" style="align-item: center;">
                        <t t-call="tl_custom.cs_footer_received" />
                        <t t-call="tl_custom.cs_footer_barcode" />
                        <t t-call="tl_custom.cs_footer_custom" />
                    </div>
                </t>
                <t t-if="partner.followup_level.join_invoices" t-foreach="partner.unpaid_invoices" t-as="o">
                    <t t-set="lang" t-value="o.user_id.lang if o.move_type in ('in_invoice', 'in_refund') else partner_addr.lang" />
                    <t t-call="tl_custom.report_invoice_document" t-lang="lang" />
                </t>
            </t>
        </t>
    </template>
</odoo>
