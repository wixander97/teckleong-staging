<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_shortfall_log_tree" model="ir.ui.view">
			<field name="name">shortfall.log.tree</field>
			<field name="model">shortfall.log</field>
			<field name="arch" type="xml">
				<tree create="false">
					<field name="order_id"/>
					<field name="details"/>
				</tree>
			</field>
		</record>

		<record id="action_shortfall_log" model="ir.actions.act_window">
			<field name="name">Shortfall Log</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">shortfall.log</field>
	        <field name="view_mode">tree</field>
		</record>

		<menuitem id="menu_shortfall_log" parent="tl_custom.menu_teckleong_root" action="action_shortfall_log" sequence="101"/>
	</data>
</odoo>