<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_template_only_form_view" model="ir.ui.view">
	      <field name="name">product.template.product.form.inherit.teckleong.custom</field>
	      <field name="model">product.template</field>
	      <field name="inherit_id" ref="product.product_template_only_form_view" />
	      <field name="arch" type="xml">
  	      	<xpath expr="//div[@name='options']" position="inside">
  	      		<span class="d-inline-block">
  		      		<field name="is_parent_product" />
  	      		    <label for="is_parent_product"/>
  	      		</span>
  	      		<span class="d-inline-block">
  		      		<field name="is_trading_route" />
  	      		    <label for="is_trading_route"/>
  	      		</span>
  	      	</xpath>
	      	      	
	      	<xpath expr="//field[@name='company_id']" position="after">
			    <field name="master_width" invisible="1"/>	
				<field name="master_length" invisible="1"/>	
				<field name="master_kg" invisible="1"/>
	      		<field name="parent_product_id" attrs="{'invisible': [('is_parent_product', '=', True)]}" domain="[('categ_id', '=', categ_id)]" />
	      		<field name="diameter" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_diameter', '=', False)]}" />
                <!-- <field name="height" attrs="{'invisible': [('is_have_height', '=', False)]}" /> -->
                <field name="width" attrs="{'readonly': [('is_parent_product', '=', False),('master_width', '!=', 0)],'invisible': [('is_have_width', '=', False)]}" />
                <field name="thickness" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_thickness', '=', False)]}" />
                <field name="length" attrs="{'readonly': [('is_parent_product', '=', False),('master_length', '!=', 0)],'invisible': [('is_have_length', '=', False)]}" />
                <field name="kg" attrs="{'readonly': [('is_parent_product', '=', False),('master_kg', '!=', 0)],'invisible': [('is_have_kg', '=', False)]}" />

				<!-- <field name="outer_diameter" attrs="{'invisible': [('is_have_outer_diameter', '=', False)]}" /> -->
                <field name="across_flat" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_across_flat', '=', False)]}" />
                <!-- <field name="breadth" attrs="{'invisible': [('is_have_breadth', '=', False)]}" /> -->
                <field name="mesh_number" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_mesh_number', '=', False)]}" />
                <field name="mesh_size" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_mesh_size', '=', False)]}" />
				<field name="hole_diameter" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_hole_diameter', '=', False)]}" />
                <!-- <field name="number" attrs="{'invisible': [('is_have_number', '=', False)]}" /> -->
                <!-- <field name="opening_dimension" attrs="{'invisible': [('is_have_opening_dimension', '=', False)]}" /> -->
                <!-- <field name="metric_number" attrs="{'invisible': [('is_have_metric_number', '=', False)]}" /> -->
                <!-- <field name="size" attrs="{'invisible': [('is_have_size', '=', False)]}" /> -->
                <field name="width_2" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_width_2', '=', False)]}" />
                <field name="pitch" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_pitch', '=', False)]}" />
                <field name="inner_diameter" attrs="{'readonly': [('is_parent_product', '=', False)],'invisible': [('is_have_inner_diameter', '=', False)]}" />
					
                <field name="dimension_uom_id" />
                <field name="cost_per_kg" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1" invisible="1" />
                <field name="is_have_diameter" invisible="1" />
                <!-- <field name="is_have_height" invisible="1" /> -->
                <field name="is_have_width" invisible="1" />
                <field name="is_have_thickness" invisible="1" />
                <field name="is_have_length" invisible="1" />
                <field name="is_have_kg" invisible="1" />

				<!-- <field name="is_have_outer_diameter" invisible="1" /> -->
                <field name="is_have_across_flat" invisible="1" />
                <!-- <field name="is_have_breadth" invisible="1" /> -->
                <field name="is_have_mesh_number" invisible="1" />
                <field name="is_have_mesh_size" invisible="1" />
     			<field name="is_have_hole_diameter" invisible="1" />
                <!-- <field name="is_have_number" invisible="1" /> -->
                <!-- <field name="is_have_opening_dimension" invisible="1" /> -->
                <!-- <field name="is_have_metric_number" invisible="1" /> -->
                <!-- <field name="is_have_size" invisible="1" /> -->
                <field name="is_have_width_2" invisible="1" />
                <field name="is_have_pitch" invisible="1" />
                <field name="is_have_inner_diameter" invisible="1" />
	      	</xpath>
	      </field>
	 </record>

	 <record id="`" model="ir.ui.view">
	 	<field name="name">product.template.search.inherit.teckleong.custom</field>
	 	<field name="model">product.template</field>
	 	<field name="inherit_id" ref="product.product_template_search_view" />
	 	<field name="arch" type="xml">
	 		<xpath expr="//filter[@name='services']" position='before'>
	 			<filter string="Trading Route" name="is_trading_route" domain="[('is_trading_route', '=', True)]"/>
	 			<filter string="Is Parent Product" name="is_parent_product" domain="[('is_parent_product', '=', True)]"/>
	 		</xpath>
	 		<xpath expr="//filter[@name='categ_id']" position="after">
                <filter string="Parent Product" name="parent_product_id" context="{'group_by':'parent_product_id'}"/>
	 		</xpath>
	 	</field>
	 </record>
</odoo>