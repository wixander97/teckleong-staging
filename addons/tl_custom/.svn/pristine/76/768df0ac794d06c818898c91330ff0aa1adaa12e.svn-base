<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_tl_custom_invoice_quotation" model="report.paperformat">
            <field name="name">Teckleong Invoice </field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">26</field>
            <field name="margin_bottom">70</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">22</field>
            <field name="dpi">90</field>
        </record>

        <record id="account.account_invoices" model="ir.actions.report">
            <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_invoice_quotation"/>
        </record>

        <template id="account.report_invoice_document">
             <t t-call="web.basic_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                </t>
                <div class="header ">
                    <link rel="stylesheet" href="/tl_custom/static/css/job_order_report.css" />
                    <div class="job-order-header">
                        <div class="job-order-header-left">
                            <div class="job-order-header-left-logo">
                                <div style="margin-right: 10px;">
                                    <img src="/tl_custom/static/img/tl_icon.png" width="100px" />
                                </div>
                                <div class="job-order-header-left-logo-text">
                                    <div style="color: red; letter-spacing: 22px; font-weight: bold; font-size: 1.65em; font-family: Arial Black;">德隆金属私人有限公司</div>
                                    <div class="d-flex" style="margin-top:5px;">
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;">TECK</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">LEONG</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">METALS</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">PTE</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:8px;">LTD</div>
                                    </div>
                                    <div style="font-size: 1.2em;margin-top:13px;">
                                        <span style="margin-right: 118px;">Tel : +65 6398 0020</span><span>Fax : +65 6398 0050</span>
                                    </div>
                                </div>  
                            </div>
                        </div>
                        <div class="job-order-header-right ">
                            <div class="job-order-header-right-child" style="text-transform: uppercase;">
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'" style="font-size: 26px;">Cancelled Invoice</span>
                                <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            </div>
                            <div style="font-size: 0.8em; margin-bottom: 20px;">
                                <span>Page : </span>
                                <span class="page" /> of <span class="topage" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page">
                    <link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
                    <div class="d-flex w-100">
                        <div class="w-50">
                            <p>
                                <div class="font-weight-bold">Invoice Address :</div>
                                <div><t t-esc="o.partner_id.parent_id.name"/></div>
                                <div><t t-esc="o.partner_id.street"/></div>
                                <div><t t-esc="o.partner_id.country_id.name"/> <t t-esc="o.partner_id.zip"/></div>
                            </p>
                            <p>
                                <div>
                                    <span>
                                        <t t-if="o.partner_id.company_type == 'person'">Attn: </t><t t-esc="o.partner_id.name"/>
                                    </span>
                                </div>
                                <div class=" d-flex t-0">
                                    <div class="w-50">Tel: <t t-esc="o.partner_id.phone"/></div>
                                    <div class="w-50">Fax:  <t t-esc="o.partner_id.fax"/> </div>
                                </div>
                                <span>Email: <t t-esc="o.partner_id.email"/></span>
                            </p>
                        </div>
                        <div class="w-50">
                            <p>
                                <div class="font-weight-bold">Delivery Address :</div>
                                <div><t t-esc="o.partner_shipping_id.parent_id.name"/></div>
                                <div><t t-esc="o.partner_shipping_id.street"/></div>
                                <div><t t-esc="o.partner_shipping_id.country_id.name"/> <t t-esc="o.partner_shipping_id.zip"/></div>
                            </p>
                            <p>
                                <div>
                                    <span>
                                        <t t-if="o.partner_id.company_type == 'person'">Attn: </t><t t-esc="o.partner_id.name"/>
                                    </span>
                                </div>
                                <div class="d-flex t-0">
                                    <div class="w-50">Tel: <t t-esc="o.partner_shipping_id.phone"/></div>
                                    <div class="w-50">Fax: <t t-esc="o.partner_shipping_id.fax"/></div>
                                </div>
                                <span>Email: <t t-esc="o.partner_shipping_id.email"/></span>
                            </p>
                        </div>
                    </div>
                    <h2 class="mt-2 text-uppercase font-weight-bold" style="font-size: 20px;">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice : </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'" class="text-uppercase" style="font-size: 18px;">Draft Invoice : </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice : </span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>

                    <div id="informations" class="row mt32 invisible">
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <table class="table table-bordered table-sm table-details" style="margin-top:-55px"  >
                        <thead>
                            <tr class="w-100">
                                <th scope="col" width="15%">Sales Order Ref</th>                        
                                <th scope="col" width="15%">PO Ref</th>                        
                                <th scope="col" width="10%">Currency</th>
                                <th scope="col" width="20%">Ordered By</th>
                                <th scope="col" width="15%">Payment Terms</th>
                                <th scope="col" width="10%">Overall Disc.</th>
                                <th scope="col" width="15%">Tax Invoice Date</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="o.invoice_origin" /></td>
                                <td><t t-esc="o.po_ref" /></td>
                                <td><p class="m-0" t-field="o.currency_id"/></td>
                                <td><t t-esc="o.partner_id.name"/></td>
                                <td><t t-esc="o.invoice_payment_term_id.name" /></td>
                                <td><t t-esc="int(o.discount_overall)" />%</td>
                                <td><p class="m-0" t-field="o.invoice_date"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
 
                    <t t-set="countss" t-value="0"/>
                    <t t-set="no" t-value="0" />
                    <t t-set="listTaxes" t-value="[]"/>
                    <table class="table table-sm o_main_table table-details" name="invoice_line_table" >
                        <thead>
                            <tr>
                                <th name="th_no" width="5%"><span>No.</span></th>
                                <th name="th_dimension" width="30%"><span>Description</span></th>
                                <th name="th_product_category" width="20%"><span>Product Category</span></th>
                                <!-- <th name="th_description" class="text-center" style="border: 1px solid black;"><span><b>Description</b></span></th> -->
                                <th name="th_sn" width="10%"><span >S/N</span></th>
                                <th name="th_quantity" width="10%"><span>Quantity</span></th>
                                <th name="th_priceunit" width="10%" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <!-- <th name="th_price_unit" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th> -->
                                <th name="th_disc" width="5%" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th>
                                <!-- <th name="th_taxes" style="border: 1px solid black;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Tax</span></th> -->
                                <th name="th_subtotal" width="10%">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Price</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody" style="font-size:13px">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="no" t-value="no+1" />
                                <t t-if="line.display_type == False">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <td name="">
                                                <t t-esc="no" />
                                            </td>
                                            <td name="" class="text-left">
                                                <span style=""  t-options="{'widget': 'text'}">
                                                    [<t t-esc="line.product_id.default_code"/>]<br /><t t-esc="line.product_id.name"/>
                                                </span>
                                            </td>
                                            <td name="account_invoice_line_name">
                                                <span t-field="line.product_id.categ_id.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <!-- <td style="border: 1px solid black;" name="account_invoice_line_product_category" class="text-center"><span t-field="line.product_id.description_sale" t-options="{'widget': 'text'}"/></td> -->
                                            <td name="">
                                                <span><span t-field="line.electrode_number" />/<br /><span t-field="line.batch_number" /></span>
                                            </td>
                                            <td>
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                            </td>
                                            <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <!-- <td t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount"/>
                                            </td> -->
                                            <td t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap"  t-esc="int(line.discount) "/>%
                                            </td>
                                           <!--  <td style="border: 1px solid black; vertical-align: middle;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                            </td> -->
                                            
                                            <td class="o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-set="countss" t-value="countss+1"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <tr>
                                        <td class="text-left" name="td_notes" colspan="8">
                                            <b>Notes : </b><t t-esc="line.name" />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" style="margin-bottom:-50px">
                        <div id="total" class="row">
                            <!-- <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"> -->
                            <div class="d-flex flex-row col-8">
                                <b>Remarks : </b><t t-esc="o.narration" />
                            </div>
                            <div t-attf-class="col-4">
                                <table class="table table-sm" style="page-break-inside: avoid;">

                                    <!--Tax totals-->
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>

                                    <!--Payments-->
                                    <t t-if="print_with_payments" style="visibility: hidden;">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="border-black">
                                                    <td><strong>Amount Due</strong></td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </div>

                        <p class="mt-2">
                        Terms and Condition <a href="https://www.teckleongmetals.com/termsofsales">https://www.teckleongmetals.com/termsofsales</a>
                        </p>
                    </div>
                </div>
                        
                <div class="footer w-100" style="align-item: center;">
                    <t t-call="tl_custom.cs_footer_barcode"/>
                    <t t-call="tl_custom.cs_footer_custom"/>
                </div>

            </t>
        </template>
        
    </data>
</odoo>