<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_picking_form" model="ir.ui.view">
	      <field name="name">stock.picking.form.inherit.teckleong.custom</field>
	      <field name="model">stock.picking</field>
	      <field name="inherit_id" ref="stock.view_picking_form" />
	      <field name="arch" type="xml">
	      	<xpath expr="//field[@name='partner_id']" position="after">
	      		<field name="teckleong_stock_type" required="1" />
	      	</xpath>
			<xpath expr="//field[@name='location_id']" position="after">
	      		<field name="self_collection_location" attrs="{'invisible': [('teckleong_stock_type', '!=', 'self_collection')], 'required': [('teckleong_stock_type', '=', 'self_collection')]}"/>
	      	</xpath>

			<xpath expr="//field[@name='group_id']" position="after">
	      		<field name="po_ref" />
	      		<field name="customer_ref" />
	      		<field name="packing_dimension" />
	      	</xpath>

	      	<xpath expr="//field[@name='user_id']" position="after">
	      		<field name="driver" />
	      	</xpath>

	      	<xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_uom']" position="after">
	      		<field name="sale_return_moves_ids" invisible="1" />
	      	    <field name="exchange_item_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" domain="[('id', 'in', sale_return_moves_ids)]" optional="hide" />
	      	</xpath>    
	      </field>
	 </record>

	 <record id="stock.stock_picking_type_action" model="ir.actions.act_window">
	     <field name="domain">	[('name', 'not ilike', 'job')]</field>
	 </record>
</odoo>