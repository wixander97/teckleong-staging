<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_tl_custom_sale_order_quotation" model="report.paperformat">
            <field name="name">Teckleong Sale Order </field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">26</field>
            <field name="margin_bottom">70</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">22</field>
            <field name="dpi">90</field>
        </record>

        <record id="sale.action_report_saleorder" model="ir.actions.report">
            <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_sale_order_quotation"/>
        </record>

        <template id="sale.report_saleorder_document">
            <t t-call="web.basic_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <t t-set="address">
                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <p t-if="doc.partner_id.vat">
                        <t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/>
                    </p>
                </t>
                <t t-if="doc.partner_shipping_id == doc.partner_invoice_id and doc.partner_invoice_id != doc.partner_id or doc.partner_shipping_id != doc.partner_invoice_id">
                    <t t-set="information_block">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and Shipping Address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing Address:</strong>
                        <div t-field="doc.partner_invoice_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                            <strong>Shipping Address:</strong>
                            <div t-field="doc.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </t>
                    </t>
                </t>

                <div class="header ">
                    <link rel="stylesheet" href="/tl_custom/static/css/job_order_report.css" />
                    <div class="job-order-header">
                        <div class="job-order-header-left">
                            <div class="job-order-header-left-logo">
                                <div style="margin-right: 10px;">
                                    <img src="/tl_custom/static/img/tl_icon.png" width="100px" />
                                </div>
                                <div class="job-order-header-left-logo-text">
                                    <div style="color: red; letter-spacing: 22px; font-weight: bold; font-size: 1.65em; font-family: Arial Black;">德隆金属私人有限公司</div>
                                    <div class="d-flex">
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;">TECK</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">LEONG</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">METALS</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">PTE</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:8px;">LTD</div>
                                    </div>
                                    <div style="font-size: 1.2em;margin-top:13px;">
                                        <span style="margin-right: 118px;">Tel : +65 6398 0020</span><span>Fax : +65 6398 0050</span>
                                    </div>
                                </div>  
                            </div>
                        </div>
                        <div class="job-order-header-right">
                            <div class="job-order-header-right-child">
                                <t t-if="doc.state not in ['draft','sent']">SALES ORDER </t>
                                <span style="font-size: 28px;">
                                    <t t-if="doc.state in ['draft','sent']">SALES QUOTATION </t>
                                </span>
                            </div>
                            <div style="font-size: 0.8em; margin-bottom: 20px;">
                                <span>Page : </span>
                                <span class="page" /> of <span class="topage" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page">
                    <link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
                    <div class="oe_structure"/>

                    <div class="d-flex w-100">
                        <div class="w-50">
                            <p>
                                <div class="font-weight-bold">Order Address :</div>
                                <div><t t-if="doc.partner_id.company_type == 'person'">Attn: </t><t t-esc="doc.partner_id.name"/></div>
                                <div><t t-esc="doc.partner_id.parent_id.name"/></div>
                                <div><t t-esc="doc.partner_id.street"/></div>
                                <div><t t-esc="doc.partner_id.country_id.name"/> <t t-esc="doc.partner_id.zip"/></div>
                            </p>
                            <p>
                                <!-- <div>
                                    <span>Attn: <t t-esc="doc.partner_id.name"/></span>
                                </div> -->
                                <div class="d-flex t-0">
                                    <div class="w-50">Tel: <t t-esc="doc.partner_id.phone"/></div>
                                    <div class="w-50">Fax: <t t-esc="doc.partner_id.fax"/></div>
                                </div>
                                <span>Email: <t t-esc="doc.partner_id.email"/></span>
                            </p>
                        </div>
                        <div class="w-50">
                            <p>
                                <div class="font-weight-bold">Delivery Address :</div>
                                <div><t t-if="doc.partner_id.company_type == 'person'">Attn: </t><t t-esc="doc.partner_id.name"/></div>
                                <div ><t t-esc="doc.partner_shipping_id.parent_id.name"/></div>
                                <div><t t-esc="doc.partner_shipping_id.street"/></div>
                                <div><t t-esc="doc.partner_shipping_id.country_id.name"/> <t t-esc="doc.partner_shipping_id.zip"/></div>
                            </p>
                            <p>
                                <div class="d-flex t-0">
                                    <div class="w-50">Tel: <t t-esc="doc.partner_shipping_id.phone"/></div>
                                    <div class="w-50">Fax: <t t-esc="doc.partner_shipping_id.fax"/></div>
                                </div>
                                <span>Email: <t t-esc="doc.partner_shipping_id.email"/></span>
                            </p>
                        </div>
                    </div>    

                    <h2 class="mt-2 text-uppercase font-weight-bold" style="font-size: 20px;">
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="doc.state not in ['draft','sent']">Sales Order Number</span>
                            <span t-if="doc.state in ['draft','sent']">Sales Quotation Number</span>
                        </t>
                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Pro-Forma Invoice</span>
                        </t> : 
                        <span t-field="doc.name"/>
                    </h2>

                    <div class="row mt32 mb32 invisible" id="informations">
                        <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                            <strong>Your Reference:</strong>
                            <p class="m-0" t-field="doc.client_order_ref"/>
                        </div>
                        <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                            <strong>Order Date:</strong>
                            <p class="m-0" t-field="doc.date_order"/>
                        </div>
                        <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                            <strong>Quotation Date:</strong>
                            <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                        </div>
                        <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                            <strong>Expiration:</strong>
                            <p class="m-0" t-field="doc.validity_date"/>
                        </div>
                        <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                            <strong>Salesperson:</strong>
                            <p class="m-0" t-field="doc.user_id"/>
                        </div>
                    </div>


                    <table class="table table-bordered table-sm table-details" style="margin-top:-55px" >
                        <thead>
                            <tr class="w-100">
                                <th width="20%" scope="col">Delivery Order No</th>
                                <th width="15%" scope="col">Invoice Ref</th>
                                <th width="10%" scope="col">Currency</th>
                                <th width="10%" scope="col">Date Order</th>
                                <th width="15%" scope="col">Order By</th>
                                <th width="15%" scope="col">Payment Terms</th>
                                <th width="15%" scope="col">Overall Disc.</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <t t-set="idso" t-value="request.env['stock.picking']"/>
                                    <t t-set="nani1" t-value="idso.search([('origin', '=',doc.name)],limit=1)"/>     
                                    <span><t t-esc="nani1.name"/></span>
                                 </td>
                                <td>
                                    <t t-set="idso1" t-value="request.env['account.move']"/>
                                    <t t-set="nani2" t-value="idso1.search([('invoice_origin', '=',doc.name)],limit=1)"/>     
                                    <span><t t-esc="nani2.name"/></span>
                                 </td>
                                <td>
                                    <p class="m-0" t-field="doc.pricelist_id.currency_id"/>
                                </td>
                                <td>
                                    <p class="m-0" t-field="doc.date_order" t-options='{"format": "d/MM/yyyy"}'/>
                                    </td>
                                <td>
                                    <t t-esc="doc.partner_id.name"/>
                                    </td>
                                <td> <t t-esc="doc.payment_term_id.name"/> </td>
                                <td> <t t-esc="int(doc.discount_overall)"/> %</td>
                            </tr>
                            
                        </tbody>
                    </table>    
                    <!-- Is there a discount on at least one line? -->
                   <!--  <t t-if="doc.state in ['draft']">
                        <t t-set="display_discount" t-value="any(l.discount for l in doc.custom_dimension_line_ids)"/>
                    </t>
                    <t t-else="">
                        <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
                    </t> -->
                    
                    <t t-set="listTaxes" t-value="[]"/>
                    <table class="table table-sm o_main_table table-details">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead>
                        <!-- <thead style="display: table-row-group"> -->
                            <tr>
                                <th name="th_description" width="35%"><span>Description</span></th>
                                <th name="th_product_category" width="20%"><span>Product Category</span></th>
                                <th name="th_sn" width="10%"><span>S/N</span></th>
                                <th name="th_quantity" width="10%"><span>Quantity</span></th>
                                <th name="th_priceunit" width="10%"><span>Unit Price</span></th>
                                <th name="th_discount" width="5%" groups="product.group_discount_per_so_line">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_subtotal" width="10%">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Price</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody style="font-size:13px">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="co" t-value="0"/>
                            <t t-foreach="doc.custom_dimension_line_ids" t-as="lines">
                                <t t-set="co" t-value="co+1"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + lines.subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + lines.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="' o_line_note' ">
                                    <td name="td_name" class="text-left">[<span t-field="lines.parent_product_id.default_code" />]<br /><span t-field="lines.name"/></td>
                                    <td name="td_product_category"><span t-field="lines.parent_product_id.categ_id.name"/></td>
                                    <td name="td_sn"><span t-field="lines.electrode_number" />/<br /><span t-field="lines.batch_number" /></td>
                                    <td name="td_quantity">
                                        <span t-field="lines.quantity" t-options='{"widget": "float", "precision": 2}'/> 
                                        <span t-field="lines.product_uom_id"/>
                                    </td>
                                    <td name="td_priceunit">
                                        <span t-field="lines.unit_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                    <td groups="product.group_discount_per_so_line">
                                        <span t-esc="int(lines.discount) " />%                                             
                                    </td>
                                    <td name="td_subtotal">
                                        <span t-field="lines.subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="lines.price_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" name="td_notes" colspan="7">
                                        <b>Notes : </b><t t-esc="lines.notes" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <!-- Tax totals -->
                                    <t t-if="doc.state in ['draft']">
                                        <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json2)"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                                    </t>
                                    <t t-call="account.document_tax_totals"/>
                                </table>
                            </div>
                        </div>

                        <p class="mt-2">
                            Terms and Condition <a href="https://www.teckleongmetals.com/termsofsales">https://www.teckleongmetals.com/termsofsales</a>
                        </p>
                    </div>
                   
                    <div t-if="doc.signature" class="mt32 ml64 mr4 invisible" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(doc.signature)" class="paynow-barcode" />
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>

                    <div class="oe_structure invisible"/>
                </div>

                <div class="footer w-100" style="align-item: center;">
                    <t t-call="tl_custom.cs_footer_barcode"/>
                    <t t-call="tl_custom.cs_footer_custom"/>
                </div>
            </t>
        </template>

        <template id="cs_footer_custom">
            <!-- <p class="m-0 p-0 hide_lastpage"><B>THIS IS A COMPUTER GENERATED DOCUMENT NO SIGNATURE IS REQUIRED</B></p> -->
            <div class="d-flex">
                <div style="width: 40%;font-size:14px;padding-top:10px">
                    <span> E &#38; O.E</span><br/>
                    <span> TLM terms and conditions of sale apply.</span>
                </div>
                <div style="width: 60%;text-align:end;">
                    <span style="font-size:20px" class="font-weight-bold">Teck Leong Metals Pte Ltd</span><br/>
                    <span>7030 Ang Mo Kio Ave 5 #01-16 Northstar@AMK Singapore 569880</span>
                </div>
            </div>
            <hr class="border-black w-100" style="margin:0px;height:1px;background-color:black" />
            <div class="d-flex" style="margin-top:0px;">
                <div class="mt-1"  style="width: 38%; ">
                    <img src="/tl_custom/static/img/ftlog.png" style="height:90px;"/><br/>
                    <span  style="margin-left:1px;font-size:12px;">CERT NO: SNG 01603965</span>
                </div>
                <div style="width: 62%;text-align:end;">
                    <p class="m-0 p-0 hide_lastpage font-weight-bold">
                        THIS IS A COMPUTER GENERATED DOCUMENT NO SIGNATURE IS REQUIRED
                    </p>
                    <span>www.teckleongmetals.com  |  sales@teckleongmetals.com</span><br/>
                    <span  style="font-size:13px;letter-spacing: 2px;padding-left:-15px">CR: 74371000000R</span>
                    <span class="mr-1 ml-1" style="font-size:13px">|</span>
                    <span style="font-size:13px;letter-spacing: 2px;">CO REG NO: 200004371G</span>
                    <span class="mr-1 ml-1" style="font-size:13px">|</span>
                    <span style="font-size:13px;letter-spacing: 2px;">GST REG NO: 200004371G</span> 
                </div>
            </div>
        </template>
        
        <template id="cs_footer_barcode" name="template_name">
            <div class=" d-flex hide_lastpage" style="width:100%;margin-left:-26px">
                <span style="color:white;">p</span>
                <img src="/tl_custom/static/img/barcode.jpeg" style="width: 190px;height:155px;opacity: 1.0;"/>
                <ul class="m-0 p-2" style="list-style-type: none;width:100%;font-size:18px;">
                    <li>Account Name: TECK LEONG METALS PTE LTD</li>
                    <li>Development Bank of Singapore (DBS)</li>
                    <li>Current Account: 011-9002808</li>
                    <li>SWIFT Code / BIC DBSSSGSG</li>
                    <li>Paynow UEN: 200004371G</li>                                       
                </ul>
            </div>  
        </template>

    </data>
</odoo>