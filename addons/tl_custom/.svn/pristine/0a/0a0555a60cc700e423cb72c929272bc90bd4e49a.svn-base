<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_tl_custom_purchase_order" model="report.paperformat">
            <field name="name">Teckleong Purchase Order </field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">88</field>
            <field name="margin_bottom">50</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">83</field>
            <field name="dpi">90</field>
        </record>

        <record id="purchase.action_report_purchase_order" model="ir.actions.report">
            <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_purchase_order"/>
        </record>
               
        <template id="purchase.report_purchaseorder_document">
            <t t-call="web.basic_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-set="address">
                    <div t-field="o.partner_id" class="invisible" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                    <p t-if="o.partner_id.vat">
                        <t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: 
                        <span t-field="o.partner_id.vat"/>
                    </p>
                </t>
                <t t-if="o.dest_address_id">
                    <t t-set="information_block" >
                        <strong >Shipping address:</strong>
                        <div t-if="o.dest_address_id" class="invisible">
                            <div t-field="o.dest_address_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                        </div>
                        
                    </t>
                </t>

                <div class="header">
                    <link rel="stylesheet" href="/tl_custom/static/css/job_order_report.css" />
                    <link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
                    <div class="job-order-header">
                        <div class="job-order-header-left">
                            <div class="job-order-header-left-logo">
                                <div style="margin-right: 10px;">
                                    <img src="/tl_custom/static/img/tl_icon.png" width="100px" />
                                </div>
                                <div class="job-order-header-left-logo-text">
                                    <div style="color: red; letter-spacing: 22px; font-weight: bold; font-size: 1.65em; font-family: Arial Black;">德隆金属私人有限公司</div>
                                    <div class="d-flex" style="margin-top:5px;">
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;">TECK</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">LEONG</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">METALS</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:7px;">PTE</div>
                                        <div style="color: black; font-weight: bold; font-size: 1.9em; font-family: Arial Black;margin-left:8px;">LTD</div>
                                    </div>
                                    <div style="font-size: 1.2em;margin-top:13px;">
                                        <span style="margin-right: 118px;">Tel : +65 6398 0020</span><span>Fax : +65 6398 0050</span>
                                    </div>
                                </div>  
                            </div>
                        </div>
                        <div class="job-order-header-right">
                            <div class="job-order-header-right-child" style="text-transform: uppercase;">
                                <!-- <span t-if="o.state in ['draft', 'sent', 'to approve']" style="font-size:23px;margin-left:-50px;line-height: normal;">Request for Quotation</span> -->
                                <t t-if="o.state in ['draft', 'sent', 'to approve']"><p style="font-size: 30px; line-height: 100%;">Request for Quotation</p></t>
                                <t t-if="o.state in ['purchase', 'done']"><p style="font-size: 29px; line-height: 100%;">Purchase Order</p></t>
                                <t t-if="o.state == 'cancel'"><p style="font-size: 28px; line-height: 100%;">Cancelled Purchase Order</p></t>

                           <!--      <span t-if="o.state in ['purchase', 'done']" style="font-size:31px;margin-left:-50px;">Purchase Order</span>
                                <span t-if="o.state == 'cancel'" style="font-size:29px;margin-left:-50px;line-height: normal;">Cancelled Purchase Order</span> -->
                                
                            </div>
                            <div style="font-size: 0.8em;">
                                <span>Page : </span>
                                <span class="page" /> of <span class="topage" />
                            </div>
                        </div>
                    </div>
                    <div class="d-flex w-100">
                        <div class="w-50">
                            <p>
                                <div class="font-weight-bold">Order Address :</div>
                                <div>
                                    <t t-if="o.partner_id.company_type == 'person'">
                                        <t t-esc="o.partner_id.parent_id.name" />
                                    </t>
                                    <t t-else="">
                                        <div class="hide-text">-</div>
                                    </t>
                                </div>
                                <div>
                                    <t t-if="o.partner_id.street">
                                        <t t-esc="o.partner_id.street" />
                                    </t>
                                    <t t-else="">
                                        <div class="hide-text">-</div>
                                    </t>
                                </div>
                                <div>
                                    <t t-if="o.partner_id.street2">
                                        <t t-esc="o.partner_id.street2" />
                                    </t>
                                    <t t-else="">
                                        <div class="hide-text">-</div>
                                    </t>
                                </div>
                                <div>
                                    <t t-if="o.partner_id.country_id.name or o.partner_id.zip">
                                        <t t-esc="o.partner_id.country_id.name"/> <t t-esc="o.partner_id.zip"/>
                                    </t>
                                    <t t-else="">
                                        <div class="hide-text">-</div>
                                    </t>
                                </div>
                            </p>
                            <p>
                                <div>
                                    <span>
                                        <t t-if="o.partner_id.company_type == 'person'">Attn: <t t-esc="o.partner_id.name"/></t>
                                    </span>
                                </div>
                                <div class="d-flex t-0">
                                    <div class="w-50">Tel: <t t-esc="o.partner_id.phone"/></div>
                                    <div class="w-50">Fax: <t t-esc="o.partner_id.fax"/></div>
                                </div>
                                <span>Email: <t t-esc="o.partner_id.email"/></span>
                            </p>
                        </div>
                        <div class="w-50">
                            <p>
                                <div class="font-weight-bold">Delivery Address :</div>
                                <!-- <div></div> -->
                                <div>
                                    <t t-esc="o.picking_type_id.warehouse_id.partner_id.parent_id.name" />
                                </div>
                                <div>
                                    <t t-esc="o.picking_type_id.warehouse_id.partner_id.street"/>
                                </div>
                                <div>
                                    <t t-esc="o.picking_type_id.warehouse_id.partner_id.country_id.name"/> 
                                    <t t-esc="o.picking_type_id.warehouse_id.partner_id.zip"/>
                                </div>
                            </p>
                            <p>
                                <div>
                                    <span>
                                        <t t-if="o.picking_type_id.warehouse_id.partner_id.company_type == 'person'">Attn: <t t-esc="o.picking_type_id.warehouse_id.partner_id.name"/></t>
                                    </span>
                                </div>
                                <div class=" d-flex t-0">
                                    <div class="w-50">Tel: <t t-esc="o.picking_type_id.warehouse_id.partner_id.phone"/></div>
                                    <div class="w-50">Fax: <t t-esc="o.picking_type_id.warehouse_id.partner_id.fax"/></div>
                                </div>
                                <span>Email: <t t-esc="o.picking_type_id.warehouse_id.partner_id.email"/></span>
                            </p>
                        </div>
                    </div>
                    <div class="mt-1 text-uppercase font-weight-bold" style="font-size: 20px;">
                        <span t-if="o.state in ['draft', 'sent', 'to approve']">Request for Quotation : <span t-field="o.name"/></span>
                        <span t-if="o.state in ['purchase', 'done']">Purchase Order : <span t-field="o.name"/></span>
                        <span t-if="o.state == 'cancel'">Cancelled Purchase Order : <span t-field="o.name"/></span>
                    </div>
                </div>

                <div class="page">
                    <link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
                    <div class="oe_structure invisible" />
                    <div class="invisible" style="position: absolute;">
                        <div t-if="o.date_order">
                            <span t-field="o.date_order" />
                        </div>
                    </div>
                 <!--    <table class="table table-bordered table-sm o_main_table table-details" style="margin-top:-40px;" >
                        <thead>
                            <tr class="w-50">
                                <th width="15%" scope="col">Sales Order Ref</th>
                                <th width="55%" scope="col">Attention To</th>
                                <th width="15%" scope="col">Delivery On / By</th>
                                <th width="15%" scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr height="57px">
                                <td><t t-esc="o.sale_order_id.name" /></td>
                                <td><t t-esc="o.partner_id.name" /></td>
                                <td><p class="m-0" t-field="o.date_order" t-options='{"format": "d/MM/yyyy"}'/> </td>
                                <td><p class="m-0" t-field="o.date_order" t-options='{"format": "d/MM/yyyy"}'/></td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered table-sm o_main_table table-details" style="margin-top: -10px;"  >
                        <thead>
                            <tr class="wl-100">
                                <th width="15%" scope="col">Payment Terms</th>
                                <th width="15%" scope="col">Shipping Terms</th>
                                <th width="15%" scope="col">Currency</th>
                                <th width="55%" scope="col">Ordered By</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="o.payment_term_id.name"/></td> 
                                <td></td>
                                <td><t t-esc="o.currency_id.name"/></td>
                                <td><t t-esc="o.user_id.name"/></td>
                            </tr>
                        </tbody>
                    </table> -->

                    <table class="table table-sm o_main_table table-details">
                        <thead>
                            <tr height="0px">
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                                <th class="no-border" width="5%"> </th>
                            </tr>
                            <tr>
                                <th colspan="3" scope="col">Sales Order Ref</th>
                                <th colspan="11" scope="col">Attention To</th>
                                <th colspan="3" scope="col">Delivery On / By</th>
                                <th colspan="3" scope="col">Date</th>
                            </tr>
                            <tr>
                                <td colspan="3"><t t-esc="o.sale_order_id.name" /></td>
                                <td colspan="11"><t t-esc="o.partner_id.name" /></td>
                                <td colspan="3"><p class="m-0" t-field="o.date_order" t-options='{"format": "d/MM/yyyy"}'/> </td>
                                <td colspan="3"><p class="m-0" t-field="o.date_order" t-options='{"format": "d/MM/yyyy"}'/></td>
                            </tr>
                            <tr>
                                <td colspan="20" class="no-border"><div class="hide-text" style="font-size: 1px;">-</div></td>
                            </tr>
                            <tr class="wl-100">
                                <th colspan="3" scope="col">Payment Terms</th>
                                <th colspan="3" scope="col">Shipping Terms</th>
                                <th colspan="3" scope="col">Currency</th>
                                <th colspan="11" scope="col">Ordered By</th>
                            </tr>
                            <tr>
                                <td colspan="3"><t t-esc="o.payment_term_id.name"/></td> 
                                <td colspan="3"></td>
                                <td colspan="3"><t t-esc="o.currency_id.name"/></td>
                                <td colspan="11"><t t-esc="o.user_id.name"/></td>
                            </tr>
                            <tr>
                                <td colspan="20" class="no-border"><div class="hide-text" style="font-size: 1px;">-</div></td>
                            </tr>
                            <tr>
                                <th colspan="1" name="th_no" width="5%">No.</th>
                                <th colspan="7" name="th_date_req" width="35%">Dimensions</th>
                                <th colspan="4" name="th_date_req" width="20%">Description</th>
                                <th colspan="2" name="th_sn" width="10%">S/N</th>
                                <th colspan="2" name="th_quantity" width="10%">Quantity</th>
                                <th colspan="2" name="th_price_unit" width="10%">Unit Price</th>
                                <th colspan="2" name="th_amount" width="10%">Price</th>
                            </tr>
                            <!-- <tr>
                                <th name="th_no" width="5%">No.</th>
                                <th name="th_date_req" width="35%">Dimensions</th>
                                <th name="th_date_req" width="20%">Description</th>
                                <th name="th_sn" width="10%">S/N</th>
                                <th name="th_quantity" width="10%">Quantity</th>
                                <th name="th_price_unit" width="10%">Unit Price</th>
                                <th name="th_amount" width="10%">Price</th>
                            </tr> -->
                        </thead>
                        <tbody style="font-size:13px">
                            <t t-set="current_subtotal" t-value="0" />
                            <t t-set="no" t-value="0" />
                            <t t-foreach="o.order_line" t-as="line">
                                <t t-set="no" t-value="no+1" />
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td  colspan="1">
                                            <t t-esc="no" />
                                        </td>
                                        <td colspan="7" class="text-left">
                                             <span t-options="{'widget': 'text'}">
                                                <t t-esc="line.product_id.name"/>
                                            </span>
                                        </td>
                                        <td colspan="4">
                                            <span  t-options="{'widget': 'text'}"> <t t-esc="line.product_id.categ_id.name"/></span>
                                        </td>
                                        <td colspan="2">
                                            <span><span t-field="line.electrode_number" />/<br /><span t-field="line.batch_number" /></span>
                                        </td>
                                        <td colspan="2">
                                            <span t-field="line.product_qty"/>
                                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                        </td>
                                        <td colspan="2">
                                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td colspan="2">
                                            <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" id="note">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99" id="subtotal">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                   
                    <div id="total" class="row justify-content-end">
                        <div class="d-flex flex-row col-8">
                            <b>Remarks : </b><t t-esc="o.notes" />
                        </div>
                        <div class="col-4">
                            <table class="table table-sm">
                                <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                <t t-call="account.document_tax_totals"/>
                            </table>
                        </div>
                    </div>
                    <div class="oe_structure" />
                </div>
                
                <div class="footer w-100" style="align-item: center;">
                    <t t-call="tl_custom.cs_footer_custom"/>
                </div>
            </t>
        </template>
        
        <template id="account.tax_groups_totals">
            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                <tr >
                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">
                        <td class="border-top-0 font-weight-bold">
                            <span t-esc="amount_by_group['tax_group_name']"/>
                        </td>
                        <td class="text-right o_price_total border-top-0">
                            <t t-set="tac_persen" t-value="amount_by_group['tax_group_amount']" />
                            <t t-set="sums" t-value="tac_persen*subtotal_amaount" />
                            <t t-if="o">
                                <span ><t t-esc="sums" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></span>
                            </t>
                            <t t-else="">
                                <span><t t-esc="sums" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></span>
                            </t>
                        </td>
                    </t>
                    <t t-else="">
                        <td class="border-top-0 font-weight-bold">
                            <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
                            <!-- Taxes -->
                        </td>
                        <td class="text-right o_price_total border-top-0">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                        </td>
                    </t>
                </tr>
            </t>
        </template>

        <template id="account.document_tax_totals">
            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                <tr class="">
                    <td class="font-weight-bold" style="border-top: 2px solid black;">
                        Subtotal
                    </td>
                    <td style="border-top: 2px solid black;" class="text-right">
                        <span t-att-class="oe_subtotal_footer_separator" t-esc="subtotal['formatted_amount']" />
                    </td>
                </tr>
                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                <t t-set="subtotal_amaount" t-value="subtotal['amount']"/>
                <t t-call="account.tax_groups_totals"/>
            </t>
            <tr>
                <td style="border-top: 2px solid black;" class="font-weight-bold">Grand Total</td>
                <td style="border-top: 2px solid black;" class="text-right">
                    <span t-esc="tax_totals['formatted_amount_total']"/>
                </td>
            </tr>
        </template>
    </data>
</odoo>