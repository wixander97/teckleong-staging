<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_tl_custom_purchase_order" model="report.paperformat">
            <field name="name">Teckleong Purchase Order </field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">45</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="purchase.action_report_purchase_order" model="ir.actions.report">
            <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_purchase_order"/>
        </record>
               
        <template id="purchase.report_purchaseorder_document">
            <t t-call="web.basic_layout">
                
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t t-set="address" >
                    <div t-field="o.partner_id" style="visibility: hidden;"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    <p t-if="o.partner_id.vat"><t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                </t>
                <t t-if="o.dest_address_id" >
                    <t t-set="information_block" >
                        <strong >Shipping address:</strong>
                        <div t-if="o.dest_address_id" style="visibility: hidden;">
                            <div t-field="o.dest_address_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                        </div>
                        
                    </t>
                </t>

                <div class="header ">
                    <div class="d-flex" style="width: 100%;">
                        <div style="">
                             <img src="/tl_custom/static/img/logo1.jpeg" style="height:90px"/>
                             <img src="/tl_custom/static/img/logo.jpeg" style="width: 380px;height:85px"/>
                             <div class="d-flex mt-2" style="font-size: 20px;margin-left:110px">
                                <p>Tel: +65 6398 0020</p>
                                <p style="margin-left:30px">Fax: +65 6398 0050</p>
                             </div>
                        </div>
                        <div style="width:42%;text-align:end;padding-top:25px">
                            <div style="text-transform:uppercase;">
                                <h2 t-if="o.state in ['draft', 'sent', 'to approve']"><span><b> Request for Quotation  </b></span></h2>
                                <h2 t-if="o.state in ['purchase', 'done']"><span><b>Purchase Order </b></span></h2>
                                <h2 t-if="o.state == 'cancel'"><span><b>Cancelled Purchase Order </b> </span></h2>
                            </div>
                            <div style="margin-top:-10px">
                                  <span>Page : </span>
                                  <span class="page"/> of <span class="topage"/>
                              </div>
                        </div>
                    </div>
                    
                </div>
                <div class="page" >
                    <div class="oe_structure" style="visibility: hidden;" />
                    <div class="d-flex" style="width: 100%;">
                        <div style="width: 50%;">
                            <p>
                            <div ><b>Invoice Address :</b></div>
                            <div ><t t-esc="o.partner_id.parent_id.name"/></div>
                            <div><t t-esc="o.partner_id.street"/></div>
                            <div><t t-esc="o.partner_id.country_id.name"/> <t t-esc="o.partner_id.zip"/></div>
                            </p>
                            <p>
                            <div>
                            <span>Attn: <t t-esc="o.partner_id.name"/></span>
                            </div>
                            <div class=" d-flex" style="margin-top:0; padding-top:0;">
                                <div style="width:50%">Tel: <t t-esc="o.partner_id.phone"/></div>
                                <div style="width:50%">Fax: </div>
                            </div>
                            <span>Email: <t t-esc="o.partner_id.email"/></span>
                            </p>
                        </div>
                        <div style="width: 50%;">
                            <p>
                                <div ><b>Delivery Address :</b></div>
                                <div ><t t-esc="o.picking_type_id.warehouse_id.partner_id.name"/></div>
                                <div><t t-esc="o.picking_type_id.warehouse_id.partner_id.street"/></div>
                                <div><t t-esc="o.picking_type_id.warehouse_id.partner_id.country_id.name"/> <t t-esc="o.picking_type_id.warehouse_id.partner_id.zip"/></div>
                            </p>
                            <p>
                                <div>
                                    <span>Attn: <t t-esc="o.picking_type_id.warehouse_id.partner_id.name"/></span>
                                </div>
                                <div class=" d-flex" style="margin-top:0; padding-top:0;">
                                    <div style="width:50%">Tel: <t t-esc="o.picking_type_id.warehouse_id.partner_id.phone"/></div>
                                    <div style="width:50%">Fax: </div>
                                </div>
                                <span>Email: <t t-esc="o.picking_type_id.warehouse_id.partner_id.email"/></span>
                            </p>
                        </div>
                    </div>
                    <div class="mt-1" style="text-transform:uppercase; font-size: 24px;font-weight: 900;">
                        <span t-if="o.state in ['draft', 'sent', 'to approve']">Request for Quotation : <span t-field="o.name"/></span>
                        <span t-if="o.state in ['purchase', 'done']">Purchase Order : <span t-field="o.name"/></span>
                        <span t-if="o.state == 'cancel'">Cancelled Purchase Order : <span t-field="o.name"/></span>
                    </div>

                    <div id="informations" class="row mt32 mb32" style="visibility: hidden;">
                        <div t-if="o.user_id" class="col-3 bm-2">
                            <strong>Purchase Representative:</strong>
                            <p t-field="o.user_id" class="m-0"/>
                        </div>
                        <div t-if="o.partner_ref" class="col-3 bm-2">
                            <strong>Your Order Reference:</strong>
                            <p t-field="o.partner_ref" class="m-0"/>
                        </div>
                        <div t-if="o.date_order" class="col-3 bm-2">
                            <strong>Order Date:</strong>
                            <p t-field="o.date_order" class="m-0"/>
                        </div>
                    </div>
                    <table class="table table-bordered table-sm o_main_table" style="margin-top:-40px;" >
                        <thead>
                            <tr style="width:100%">
                            
                            <th scope="col" class="text-center " style="border: 2px solid black;width:25%;"><b>Sales Order Ref</b></th>
                            <th scope="col" class="text-center " style="border: 2px solid black;width:25%;"><b>Delivery On / By</b></th>
                            <th scope="col" class="text-center " style="border: 2px solid black;width:25%;"><b>Purchase Order Date</b></th>
                            
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            <td class="text-center" style="border: 2px solid black;"><t t-esc="o.origin"/></td>
                            <td class="text-center" style="border: 2px solid black;"><p class="m-0" t-field="o.date_order" t-options='{"format": "d/MM/yyyy"}'/> </td>
                            <td class="text-center" style="border: 2px solid black;"><p class="m-0" t-field="o.date_order" t-options='{"format": "d/MM/yyyy"}'/></td>
                            </tr>
                            
                        </tbody>
                    </table>

                    <table class="table table-bordered table-sm o_main_table" style="padding: 8px 20px;"  >
                        <thead>
                            <tr style="width:100%">
                            
                            <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Currency</b></th>
                            <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Attention To</b></th>
                            <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Orderered By</b></th>
                            <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Payment Terms</b></th>
                            
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            <td class="text-center" style="border: 2px solid black;"><t t-esc="o.currency_id.name"/></td>
                             <td class="text-center" style="border: 2px solid black;"><t t-esc="o.partner_id.name"/></td>
                            <td class="text-center" style="border: 2px solid black;"><t t-esc="o.user_id.name"/></td>
                            <td class="text-center" style="border: 2px solid black;"><t t-esc="o.payment_term_id.name"/></td> 
                            </tr>
                            
                        </tbody>
                    </table>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr >
                                <th name="th_date_req" class="text-center" style="border: 2px solid black;"><strong>Dimension</strong></th>
                                <th name="th_description" class="text-center" style="border: 2px solid black;"><strong>Description</strong></th>
                                <th name="th_sn" class="text-center" style="border: 2px solid black;"><strong>S/N</strong></th>
                                <th name="th_quantity" class="text-center" style="border: 2px solid black;"><strong>Quantity</strong></th>
                                <th name="th_price_unit" class="text-center" style="border: 2px solid black;"><strong>Unit Price</strong></th>
                                <th name="th_taxes"  class="text-center" style="border: 2px solid black;"><strong>Tax</strong></th>
                                <th name="th_amount" class="text-center" style="border: 2px solid black;"><strong>Price</strong></th>
                            </tr>
                        </thead>
                        <tbody style="font-size:13px">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="o.order_line" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        
                                        <td class="text-center" style="border: 2px solid black;">

                                             <span  t-options="{'widget': 'text'}"> [<t t-esc="line.name"/>]</span>
                                        </td>
                                        <td class="text-center" id="product" style="border: 2px solid black;">
                                            <span t-field="line.product_id.description_sale" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid black;">
                                            <!-- <span t-field="line.date_planned"/> -->
                                            <span>-</span>
                                        </td>
                                        <td class="text-center" style="border: 2px solid black;">
                                            <span t-field="line.product_qty"/>
                                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid black;">
                                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                         <td class="text-center" name="td_taxes" style="border: 2px solid black;">
                                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid black;">
                                            <span t-field="line.price_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" id="note">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99" id="subtotal">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div id="total" class="row justify-content-end">
                        <div class="col-4">
                            <table class="table table-sm">
                                <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                <t t-call="account.document_tax_totals"/>
                            </table>
                        </div>
                    </div>

                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>
                
                <div class=" footer" style="width: 100%; align-item: center;  ">
                        <!-- <div class=" d-flex hide_lastpage"  t-attf-style="width:100%;page-break-inside: avoid !important;">
                            <div class="" style="width:50%; ">
                                <span style="font-size:12px"><b>Remarks:</b></span>
                                <div class="pt-3">
                                    <span>Accepted by:</span>
                                
                                    <div style="margin-top:101px">
                                    <hr class="border-black" style="margin:0px;width:300px;height: 1px;background-color:black"/>
                                    <span>Khim Seah Enterprise Pte Ltd</span>
                                    </div>
                                </div>
                            </div>
                            <div style="width:50%;position: relative">
                            
                                <div class="pt-4">
                                    <span></span>
                                
                                    <div style="position: absolute; bottom: 0;right:0">
                                    <hr class="border-black" style="margin:0px;width:300px;height: 1px;background-color:black"/>
                                    <span>Khim Seah Enterprise Pte Ltd</span>
                                    </div>
                                </div>
                            </div>
                        </div> -->

                          <p class="m-0 p-0 hide_lastpage"><B>THIS IS A COMPUTER GENERATED DOCUMENT NO SIGNATURE IS REQUIRED</B></p>
                          <div class="d-flex">
                                <div  style="width: 40%;font-size:14px;padding-top:10px">
                                    <span> E &#38; O.E</span><br/>
                                    <span> TLM terms and conditions of sale apply.</span>
                                </div>
                                <div  style="width: 60%;text-align:end;">
                                    <span style="font-size:20px"><b>Teck Leong Metals Pte Ltd</b></span><br/>
                                    <span>7030 Ang Mo Kio Ave 5 #01-16 Northstar@AMK Singapore 569880</span>
                                </div>
                          </div>
                          <hr class="border-black" style="margin:0px;width:100%;height: 1px;background-color:black"/>
                          <div class="d-flex" style="margin-top:0px;">
                                <div class="mt-1"  style="width: 38%; ">
                                    
                                    <img src="/tl_custom/static/img/ftlog.png" style="height:90px;"/><br/>
                                    <span  style="margin-left:1px;font-size:12px;">CERT NO: SNG 01603965</span>
                                    
                                </div>
                                <div   style="width: 62%;text-align:end;">
                                    <span>7030 Ang Mo Kio Ave 5 #B1-03/04 Northstar@AMK Singapore 569880</span><br/>
                                    <span>69q Tuas South Avenue 1 Seatown Industrial Centre Singapore 637495</span><br/>
                                    <span>28 Kelantan Road #01-127 Singapore 200028</span><br/>
                                    <span>www.teckleongmetals.com  |  sales@teckleongmetals.com</span>
                                    <div class="d-flex" style="text-align:left;width:100%;font-size:12px;margin-left:-14px">
                                       <div style="width:27%;letter-spacing: 2px;margin-right:3px "> <span>CR: 74371000000R</span> </div>
                                       <div style="width:2%;margin-right:3px"> <span>|</span> </div>
                                       <div style="width:36%;letter-spacing: 2px; margin-right:3px"> <span>CO REG NO: 200004371G</span></div>
                                       <div style="width:2%;margin-right:3px"> <span>|</span> </div>
                                       <div style="width:35%;letter-spacing: 2px; "> <span>CO REG NO: 200004371G</span></div>    
                                    </div>
                                </div>
                          </div>
                          
                </div>
            </t>
        </template>
        
        <template id="account.tax_groups_totals">
            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                <tr >
                    <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">
                        <td>
                            <span t-esc="amount_by_group['tax_group_name']"/>
                            <span class="text-nowrap"> on
                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                            </span>
                        </td>
                        <td class="text-right o_price_total">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                        </td>
                    </t>
                    <t t-else="">
                        <td style="border-top:none;"><span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/></td>
                        <td style="border-top:none;" class="text-right o_price_total">
                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
                        </td>
                    </t>
                </tr>
            </t>
        </template>

        <template id="account.document_tax_totals">
            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                <tr class="">
                    <td style="border-top: 2px solid black;"><strong t-esc="subtotal['name']"/></td>

                    <td style="border-top: 2px solid black;" class="text-right">
                        <span
                            t-att-class="oe_subtotal_footer_separator"
                            t-esc="subtotal['formatted_amount']"
                        />
                    </td>
                </tr>

                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                <t t-call="account.tax_groups_totals"/>
            </t>
            <tr class=" " >
                <td style="border-top: 2px solid black;"><strong>Grand Total</strong></td>
                <td style="border-top: 2px solid black;" class="text-right">
                    <span t-esc="tax_totals['formatted_amount_total']"/>
                </td>
            </tr>
        </template>
    </data>
</odoo>