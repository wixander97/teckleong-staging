<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="paperformat_tl_custom_customer_soa" model="report.paperformat">
		    <field name="name">Teckleong Customer SoA</field>
		    <field name="default" eval="True" />
		    <field name="format">A4</field>
		    <field name="page_height">0</field>
		    <field name="page_width">0</field>
		    <field name="orientation">Portrait</field>
		    <field name="margin_top">25</field>
		    <field name="margin_bottom">67</field>
		    <field name="margin_left">3</field>
		    <field name="margin_right">3</field>
		    <field name="header_line" eval="False" />
		    <field name="header_spacing">20</field>
		    <field name="dpi">90</field>
		</record>

		<record id="partner_statement.action_print_outstanding_statement" model="ir.actions.report">
		    <field name="name">Outstanding Statement</field>
		    <field name="model">res.partner</field>
		    <field name="report_name">partner_statement.outstanding_statement</field>
		    <field name="report_type">qweb-pdf</field>
		    <field name="report_file">partner_statement.outstanding_statement</field>
		    <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_customer_soa"/>
		</record>

		<template id="partner_statement.outstanding_statement_document">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.basic_layout">
					<t t-set="o" t-value="o.with_context({'lang': lang})" />
					<t t-set="address">
					    <address
					        t-esc="get_inv_addr(o)"
					        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
					    />
					    <div t-if="o.vat" class="mt16"><t
					            t-esc="company.country_id.vat_label or 'Tax ID'"
					        />: <span t-field="o.vat" /></div>
					</t>

					<div class="header">
					    <link rel="stylesheet" href="/tl_custom/static/css/job_order_report.css" />
					    <link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
					    <div class="job-order-header" style="margin-top: 0px;">
					        <div class="job-order-header-left">
					            <div class="job-order-header-left-logo">
					                <div style="margin-right: 10px;">
					                    <img src="/tl_custom/static/img/tl_icon.png" width="100px" />
					                </div>
					                <div class="job-order-header-left-logo-text">
					                    <div style="color: red; letter-spacing: 22px; font-weight: bold; font-size: 1.65em; font-family: Arial;">德隆金属私人有限公司</div>
					                    <div class="d-flex" style="margin-top:5px; font-family: Arial;">
					                        <div style="color: black; font-weight: bold; font-size: 1.9em;">TECK</div>
					                        <div style="color: black; font-weight: bold; font-size: 1.9em;margin-left:7px;">LEONG</div>
					                        <div style="color: black; font-weight: bold; font-size: 1.9em;margin-left:7px;">METALS</div>
					                        <div style="color: black; font-weight: bold; font-size: 1.9em;margin-left:7px;">PTE</div>
					                        <div style="color: black; font-weight: bold; font-size: 1.9em;margin-left:8px;">LTD</div>
					                    </div>
					                    <div style="font-size: 1.2em;margin-top:20px;">
					                        <span style="margin-right: 118px;">Tel : +65 6398 0020</span><span>Fax : +65 6398 0050</span>
					                    </div>
					                </div>  
					            </div>
					        </div>
					        <div class="job-order-header-right">
					            <div class="job-order-header-right-child" style="margin-top: -10px">
					                <span style="font-size: 20px;">
					                    STATEMENT OF ACCOUNTS
					                </span>
					            </div>
					            <div style="font-size: 0.8em; margin-bottom: 20px;">
					                <span>Page : </span>
					                <span class="page" /> of <span class="topage" />
					            </div>
					        </div>
					    </div>
					</div>
					<div class="page">
						<link rel="stylesheet" href="/tl_custom/static/css/tl_report.css" />
						<t t-if="o.child_ids">
							<t t-if="len(o.child_ids.filtered(lambda x: x.type == 'invoice')) > 0">
								<t t-set="invoice_address_customer" t-value="o.child_ids.filtered(lambda x: x.type == 'invoice')[0]" />
							</t>
							<t t-else="">
								<t t-set="invoice_address_customer" t-value="o" />
							</t>
						</t>
						<t t-else="">
							<t t-set="invoice_address_customer" t-value="o" />
						</t>

						<table class="table table-sm o_main_table table-details">
							<thead>
							    <tr>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							        <th class="no-border" width="5%"> </th>
							    </tr>
							    <tr>
							    	<td colspan="20" class="no-border">
							    	    <div class="d-flex w-100 text-left">
							    	        <div class="w-50" style="padding-right: 25px;">
							    	            <p>
							    	                <div class="font-weight-bold">Invoice Address :</div>
							    	                <div>
							    	                    <t t-if="invoice_address_customer.company_type == 'person'">
							    	                        <t t-if="invoice_address_customer.parent_id.name">
							    	                            <t t-esc="invoice_address_customer.parent_id.name" />
							    	                        </t>
							    	                        <t t-else="">
							    	                            <div class="hide-text">-</div>
							    	                        </t>
							    	                    </t>
							    	                    <t t-else="">
							    	                        <t t-esc="invoice_address_customer.name"/>
							    	                    </t>
							    	                </div>
							    	                <div>
							    	                    <t t-if="invoice_address_customer.street">
							    	                        <t t-esc="invoice_address_customer.street" />
							    	                    </t>
							    	                    <t t-else="">
							    	                        <div class="hide-text">-</div>
							    	                    </t>
							    	                </div>
							    	                <div>
							    	                    <t t-if="invoice_address_customer.street2">
							    	                        <t t-esc="invoice_address_customer.street2" />
							    	                    </t>
							    	                    <t t-else="">
							    	                        <div class="hide-text">-</div>
							    	                    </t>
							    	                </div>
							    	                <div>
							    	                    <t t-if="invoice_address_customer.country_id.name or invoice_address_customer.zip"> 
							    	                        <t t-esc="invoice_address_customer.country_id.name"/> 
							    	                        <t t-esc="invoice_address_customer.zip"/>
							    	                    </t>
							    	                    <t t-else="">
							    	                        <div class="hide-text">-</div>
							    	                    </t>
							    	                </div>
							    	            </p>
							    	            <p>
							    	                <div>
							    	                    <span>
							    	                        <t t-if="invoice_address_customer.company_type == 'person'">
							    	                            Attn: <t t-esc="invoice_address_customer.name"/>
							    	                        </t>
							    	                        <t t-else="">
							    	                            <div class="hide-text">-</div>
							    	                        </t>
							    	                    </span>
							    	                </div>
							    	                <div class="d-flex t-0">
							    	                    <div class="w-50">Tel: <t t-esc="invoice_address_customer.phone"/></div>
							    	                    <div class="w-50">Fax: <t t-esc="invoice_address_customer.fax"/></div>
							    	                </div>
							    	                <span>Email: <t t-esc="invoice_address_customer.email"/></span>
							    	            </p>
							    	        </div>
							    	        <div class="w-50" style="padding-right: 25px;">
							    	        	<table class="w-100 table">
							    	        		<tr>
							    	        			<td class="w-50 text-left no-border">
							    	        				Statement as at
							    	        			</td>
							    	        			<td class="w-50 text-left no-border">
							    	        				: <t t-esc="d['end']" />
							    	        			</td>
							    	        		</tr>
							    	        		<tr>
							    	        			<td class="w-50 text-left no-border">
							    	        				Print Date
							    	        			</td>
							    	        			<td class="w-50 text-left no-border">
							    	        				: <span t-esc="datetime.datetime.now().strftime('%d/%m/%Y')" />
							    	        			</td>
							    	        		</tr>
							    	        		<tr>
							    	        			<td class="w-50 text-left no-border">
							    	        				Credit Term
							    	        			</td>
							    	        			<td class="w-50 text-left no-border">
							    	        				: -
							    	        			</td>
							    	        		</tr>
							    	        	</table>
							    	        </div>
							    	    </div> 
							    	</td>
							    </tr>
							    <tr>
						            <th scope="col" colspan="5">Reference Number</th>
						            <th scope="col" colspan="3">Date</th>
						            <th scope="col" colspan="6">Description</th>
						            <th scope="col" colspan="3">Open Amount</th>
						            <th scope="col" colspan="3">Balance</th>
							    </tr>
							</thead>
							<tbody>
								<t t-if="d['currencies']">
									<t t-foreach="d['currencies'].items()" t-as="currency">
										<t t-set="display_currency" t-value="Currencies[currency[0]]" />
										<t t-set="currency" t-value="currency[1]" />

										<t t-foreach="currency['lines']" t-as="line" t-att-class="'statement-blocked' if line['blocked'] else ''">
											<tr>
												<td scope="col" colspan="5" class="text-left">
													<span t-esc="line['move_id']" />
												</td>
												<td scope="col" colspan="3">
													<span t-esc="line['date']" />
												</td>
												<td scope="col" colspan="6" class="text-left">
													<t t-if="line['name'] != '/'">
													    <t t-if="not line['ref']">
													        <span t-esc="line['name']" />
													    </t>
													    <t t-if="line['ref'] and not line['name']">
													        <span t-esc="line['ref']" />
													    </t>
													    <t t-if="line['ref'] and line['name']">
													        <t
													            t-if="line['name'] not in line['ref'] or line['name'] == line['ref']"
													        >
													            <span t-esc="line['name']" />
													        </t>
													        <t
													            t-if="line['ref'] not in line['name']"
													        >
													            <span t-esc="line['ref']" />
													        </t>
													    </t>
													</t>
													<t t-if="line['name'] == '/'">
													    <span t-esc="line['ref']" />
													</t>
												</td>
												<td scope="col" colspan="3">
													<span
	                                            t-esc="line['open_amount']"
	                                            t-options="{'widget': 'monetary', 'display_currency': display_currency}"
	                                        />
												</td>
												<td scope="col" colspan="3">
													<span
	                                            t-esc="line['balance']"
	                                            t-options="{'widget': 'monetary', 'display_currency': display_currency}"
	                                        />
												</td>
											</tr>
										</t>
										<tr class="font-weight-bold">
											<td scope="col" colspan="5">
												
											</td>
											<td scope="col" colspan="3">
												<span t-esc="d['end']" />
											</td>
											<td scope="col" colspan="6">
												
											</td>
											<td scope="col" colspan="3">
												Ending Balance
											</td>
											<td scope="col" colspan="3">
												<span
												    t-esc="currency['amount_due']"
												    t-options="{'widget': 'monetary', 'display_currency': display_currency}"
												/>
											</td>
										</tr>
									</t>
								</t>
							</tbody>
						</table>
						<t t-if="d['currencies']">
							<t
							    t-call="partner_statement.aging_buckets"
							    t-if="currency['buckets']"
							/>
						</t>
					</div>
					<div class="footer w-100" style="align-item: center;">
						<div style="margin-bottom: 25px;">
							<span>
								1. Any discrepancies in this statement must be notified within TEN(10) days.
							</span><br />
							<span>
								2. Cheque to be crossed and made payable to : TECK LEONG METALS PTE LTD.
							</span><br />
							<span>
								3. Bank Transfer : DBS - 011-900-280-8 or UOB - 932-345-116-4
							</span><br />
							<span>
								4. PayNow to UEN : 200004371G
							</span>
						</div>
					    <t t-call="tl_custom.cs_footer_custom"/>
					</div>
				</t>
			</t>
