    def write(self, vals):
        if vals.get('narration'):
            vals['narration'] = vals['narration'].replace("<p>", "<br>")
            vals['narration'] = vals['narration'].replace("</p>", "")

            if vals['narration'][:4] == "<br>":
                vals['narration'] = vals['narration'][4:]



        res = super(AccountMove, self).write(vals)

        for move in self:
            state = vals['state'] if vals.get('state') else False
            payment_state = vals['payment_state'] if vals.get('payment_state') else False
            is_woocommerce = vals['is_woocommerce'] if vals.get('is_woocommerce') else move.is_woocommerce

            if state and is_woocommerce:
                move = move

                if state == 'posted':
                    if not move.invoice_date:
                        if move.is_sale_document(include_receipts=True):
                            move.invoice_date = fields.Date.context_today(move)
                            move.with_context(check_move_validity=False)._onchange_invoice_date()
                        elif move.is_purchase_document(include_receipts=True):
                            raise UserError(_("The Bill/Refund date is required to validate this document."))

                    if (move.company_id.tax_lock_date and move.date <= move.company_id.tax_lock_date) and (move.line_ids.tax_ids or move.line_ids.tax_tag_ids):
                        move.date = move._get_accounting_date(move.invoice_date or move.date, True)
                        move.with_context(check_move_validity=False)._onchange_currency()

                    vals['posted_before'] = True

                    if move._auto_compute_invoice_reference():
                        move.payment_reference = move._get_invoice_computed_reference()

                    for line in move.line_ids.filtered(lambda line: line.account_id.user_type_id.type in ('receivable', 'payable')):
                        line.name = move._get_invoice_computed_reference()

                    #################################

                    edi_document_vals_list = []

                    for edi_format in move.journal_id.edi_format_ids:
                        is_edi_needed = move.is_invoice(include_receipts=False) and edi_format._is_required_for_invoice(move)

                        if is_edi_needed:
                            errors = edi_format._check_move_configuration(move)
                            if errors:
                                raise UserError(_("Invalid invoice configuration:\n\n%s") % '\n'.join(errors))

                            existing_edi_document = move.edi_document_ids.filtered(lambda x: x.edi_format_id == edi_format)
                            if existing_edi_document:
                                existing_edi_document.write({
                                    'state': 'to_send',
                                    'attachment_id': False,
                                })
                            else:
                                edi_document_vals_list.append({
                                    'edi_format_id': edi_format.id,
                                    'move_id': move.id,
                                    'state': 'to_send',
                                })

                    move.env['account.edi.document'].create(edi_document_vals_list)
                    move.edi_document_ids._process_documents_no_web_services()
                    move.env.ref('account_edi.ir_cron_edi_network')._trigger()

                elif state == 'draft':
                    move.mapped('line_ids.analytic_line_ids').unlink()

                    move.mapped('line_ids').remove_move_reconcile()
                    move.is_move_sent = False

                elif state == 'cancel':
                    move.auto_post = False

            if payment_state and is_woocommerce:
                if payment_state == 'paid':
                    Payment = move.env['account.payment'].with_context(default_invoice_ids=[(4, move.id, False)])
                    payment = Payment.create({
                        'date': date.today(),
                        'payment_type': 'inbound',
                        'partner_type': 'customer',
                        'partner_id': move.partner_id.id,
                        'amount': move.amount_residual,
                        'journal_id': move.company_id.woocommerce_journal_id.id,
                        'company_id': move.company_id.id,
                        'currency_id': move.currency_id.id,
                        'ref': move.name,
                    })

                    payment.action_post()
                    receivable_line = payment.line_ids.filtered('credit')
                    move.js_assign_outstanding_line(receivable_line.id)

        return res

