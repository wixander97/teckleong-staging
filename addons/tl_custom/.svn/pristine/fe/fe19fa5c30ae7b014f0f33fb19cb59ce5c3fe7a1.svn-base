<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_tl_custom_invoice_quotation" model="report.paperformat">
            <field name="name">Teckleong Invoice </field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">45</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="account.account_invoices" model="ir.actions.report">
            <field name="paperformat_id" ref="tl_custom.paperformat_tl_custom_invoice_quotation"/>
        </record>

        <template id="account.report_invoice_document">
             <t t-call="web.basic_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                </t>
                <div class="header ">
                    <div class="d-flex" style="width: 100%;">
                        <div style="">
                             <img src="/tl_custom/static/img/logo1.jpeg" style="height:90px"/>
                             <img src="/tl_custom/static/img/logo.jpeg" style="width: 380px;height:85px"/>
                             <div class="d-flex mt-2" style="font-size: 20px;margin-left:110px">
                                <p>Tel: +65 6398 0020</p>
                                <p style="margin-left:30px">Fax: +65 6398 0050</p>
                             </div>
                        </div>
                        <div style="width:42%;text-align:end;padding-top:25px">
                            <div>
                                <h2 style="text-transform:uppercase;"> <b> 
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice</span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                                    </b>
                                </h2>
                            </div>
                            <div style="margin-top:-10px">
                                  <span>Page : </span>
                                  <span class="page"/> of <span class="topage"/>
                              </div>
                        </div>
                    </div>
                    
                </div>
                <div class="page " >
                    <div class="d-flex" style="width: 100%;">
                        <div style="width: 50%;">
                            <p>
                            <div ><b>Invoice Address :</b></div>
                            <div ><t t-esc="o.partner_id.parent_id.name"/></div>
                            <div><t t-esc="o.partner_id.street"/></div>
                            <div><t t-esc="o.partner_id.country_id.name"/> <t t-esc="o.partner_id.zip"/></div>
                            </p>
                            <p>
                            <div>
                            <span>Attn: <t t-esc="o.partner_id.name"/></span>
                            </div>
                            <div class=" d-flex" style="margin-top:0; padding-top:0;">
                                <div style="width:50%">Tel: <t t-esc="o.partner_id.phone"/></div>
                                <div style="width:50%">Fax: </div>
                            </div>
                            <span>Email: <t t-esc="o.partner_id.email"/></span>
                            </p>
                        </div>
                        <div style="width: 50%;">
                            <p>
                            <div ><b>Delivery Address :</b></div>
                            <div ><t t-esc="o.partner_shipping_id.parent_id.name"/></div>
                            <div><t t-esc="o.partner_shipping_id.street"/></div>
                            <div><t t-esc="o.partner_shipping_id.country_id.name"/> <t t-esc="o.partner_shipping_id.zip"/></div>
                            </p>
                            <p>
                            <div>
                            <span>Attn: <t t-esc="o.partner_shipping_id.name"/></span>
                            </div>
                            <div class=" d-flex" style="margin-top:0; padding-top:0;">
                                <div style="width:50%">Tel: <t t-esc="o.partner_shipping_id.phone"/></div>
                                <div style="width:50%">Fax: </div>
                            </div>
                            <span>Email: <t t-esc="o.partner_shipping_id.email"/></span>
                            </p>
                        </div>
                    </div>
                    <h2 class="mt-2" style="text-transform:uppercase;font-size: 20px;"><b>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice : </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice : </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice : </span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                        </b>
                    </h2>

                    <div id="informations" class="row mt32 " style="visibility: hidden;">
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <table class="table table-bordered table-sm " style="margin-top:-55px"  >
                        <thead>
                            <tr style="width:100%">
                                <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Sales Order Ref</b></th>                        
                                <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Currency</b></th>
                                <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Tax Invoice Date</b></th>
                                <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Order By</b></th>
                                <th scope="col" class="text-center " style="border: 2px solid black;width:20%;"><b>Payment Terms</b></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            <td class="text-center" style="border: 2px solid black;"><t t-esc="o.invoice_origin" /></td>
                            <td class="text-center" style="border: 2px solid black;"><p class="m-0" t-field="o.currency_id"/></td>
                            <td class="text-center" style="border: 2px solid black;"><p class="m-0" t-field="o.invoice_date"/></td>
                            <td class="text-center" style="border: 2px solid black;"><t t-esc="o.partner_id.name"/></td>
                            <td class="text-center" style="border: 2px solid black;">COD</td>
                            </tr>
                            
                        </tbody>
                    </table>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
 
                    <t t-set="countss" t-value="0"/>
                    
                    <table class="table table-sm o_main_table  " name="invoice_line_table" >
                        <thead>
                            <tr style="border: 2px solid black;">
                                <th name="th_dimension" class="text-center" style="border: 2px solid black;" ><span><b>Dimension</b></span></th>
                                <th name="th_description" class="text-center" style="border: 2px solid black;"><span><b>Description</b></span></th>
                                <th name="th_sn" class="text-center" style="border: 2px solid black;"><span ><b>S/N</b></span></th>
                                <th name="th_quantity" class="text-center" style="border: 2px solid black;"><span><b>Quantity</b></span></th>
                                <th name="th_priceunit" style="border: 2px solid black;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <!-- <th name="th_price_unit" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th> -->
                                <th name="th_price_unit" style="border: 2px solid black;"  t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span><b>Disc.%</b></span>
                                </th>
                                <th name="th_taxes" style="border: 2px solid black;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Tax</span></th>
                                <th name="th_subtotal" style="border: 2px solid black;" class="text-center">
                                    <span groups="account.group_show_line_subtotals_tax_excluded"><b>Price</b></span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody" style="font-size:13px">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr style="border: 2px solid black;" t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="" style="border: 2px solid black;" class="text-center">
                                            
                                            <span style=""  t-options="{'widget': 'text'}"> [<t t-esc="line.name"/>]</span>
                                        </td>
                                        <td style="border: 2px solid black;" name="account_invoice_line_name" class="text-center"><span t-field="line.product_id.description_sale" t-options="{'widget': 'text'}"/></td>
                                        <td style="border: 2px solid black;" name="" class="text-center">
                                            <!-- <span t-field="line.name" t-options="{'widget': 'text'}"/> -->
                                            <span>-</span>
                                        </td>
                                        <td style="border: 2px solid black;" class="text-center">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td style="border: 2px solid black;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <!-- <td t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td> -->
                                        <td style="border: 2px solid black;"  t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="border: 2px solid black;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td>
                                        <td style="border: 2px solid black;" class="text-center o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>

                                <t t-set="countss" t-value="countss+1"/>
                            </t>
                        </tbody>
                    </table>
                     
                    <div class="clearfix   " style="margin-bottom:-50px">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">

                                    <!--Tax totals-->
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>

                                    <!--Payments-->
                                    <t t-if="print_with_payments" style="visibility: hidden;">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="border-black">
                                                    <td><strong>Amount Due</strong></td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>

                                <div class=" text-right">
                                    <p class=" p-0" style="margin-right:16px;margin-bottom:-4px"><b>Paynow QR Code</b></p>
                                    <img class=""  src="/tl_custom/static/img/barcode.jpeg" style="width: 200px;height:185px;margin-right:-20px"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <p class="tests"/>


                    <p style="visibility: hidden;" t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication">
                        Please use the following communication for your payment : <b><span t-field="o.payment_reference"/></b>
                    </p>
                    <p style="visibility: hidden;" t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <div style="visibility: hidden;" t-if="not is_html_empty(o.narration)" name="comment">
                        <span t-field="o.narration"/>
                    </div>
                    <p style="visibility: hidden;" t-if="not is_html_empty(o.fiscal_position_id.note)" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <p style="visibility: hidden;" t-if="o.invoice_incoterm_id" name="incoterm">
                        <strong>Incoterm: </strong><span t-field="o.invoice_incoterm_id.code"/> - <span t-field="o.invoice_incoterm_id.name"/>
                    </p>
                    <div style="visibility: hidden;" id="qrcode" t-if="o.display_qr_code and o.amount_residual > 0">
                        <p t-if="qr_code_urls.get(o.id)">
                            <strong class="text-center">Scan me with your banking app.</strong><br/><br/>
                            <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]"/>
                        </p>
                    </div>
                    
                    <div class="hide_lastpage " style="page-break-before: always;margin-left:20px;font-size: 18px;">
                        <p>Teck Leong Metals Pte Ltd Bank Details:</p>
                        <ul class="m-0 p-0" style="list-style-type: none">
                            <li>Account Name: TECK LEONG METALS PTE LTD</li>
                            <li>Development Bank of Singapore (DBS)</li>
                            <li>Current Account: 011-9002808</li>
                            <li>SWIFT Code / BIC DBSSSGSG</li>
                            <li>Bank / Institution DBS BANK LTD.</li>
                            <li>Branch Name</li> 
                            <li>Address DBS ASIA CENTRAL MBFC TOWER 3, 12 MARINA BOULEVARD</li>
                            <li>City SINGAPORE</li>
                            <li>Postcode 018982</li>
                            <li>Country Singapore</li>
                        </ul>

                        <p>You can use paynow via DBS app:</p>
                        <p>Just use the following UEN to search for  &#160; <b>TECK LEONG METALS PTE LTD</b></p>
                        <img src="/tl_custom/static/img/Date.png" style="height:90px"/><br/>
                       
                        <span><b>Please select FAST instead of GIRO if you need it urgently</b></span>
                        <p>GIRO will takes 2-3 business day and delivery can only arrange after we received the payment (NOT on the day after you transfer)</p>
                        <span><b>Please indicate invoice number in your reference.</b></span>
                    </div>
                    
                   
                </div>
                        
                <div class=" footer" style="width: 100%; align-item: center;  ">
                        <!--
                            signature 
                            <div class=" d-flex hide_lastpage"  t-attf-style="width:100%;page-break-inside: avoid !important;">
